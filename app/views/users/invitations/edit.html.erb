<%= stylesheet_link_tag 'style.css' %><br/>

<body style="padding-left: 13cm;padding-right: 13cm;padding-top: 0.5cm">

<%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f| %><br/>
  <h2>Create Account</h2>
  <div class="form">
    <%= f.hidden_field :invitation_token %>
    <%= f.text_field :first_name %>
    <%= f.text_field :last_name %>
    <%= f.email_field :email, readonly: true %><br/>
    <%= f.hidden_field :invitation_status, value: "Accepted" %>
    <%= f.password_field :password, placeholder: "Password", autocomplete: "new-password"  %>
    <%= f.password_field :password_confirmation,placeholder: "Password Confirmation", autocomplete: "new-password" %>
    <%= f.submit "Create Account" %>
    <% end %>
  </div>
  </body>
