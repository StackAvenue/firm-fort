<%= stylesheet_link_tag 'style.css' %><br/>

<div class="form">
  <%= form_for(resource, as: resource_name, url: invitation_path(resource_name),
               html: { method: :put }) do |f| %><br/>
    <h2>Create Account</h2>
    
      <%= f.hidden_field :invitation_token %>

      <div class="error" >
        <%= resource.errors.full_messages_for(:first_name).first %>
      </div>
      <%= f.text_field :first_name %>

      <%= f.text_field :last_name %>

      <%= f.email_field :email, readonly: true %><br/>

      <%= f.hidden_field :invitation_status, value: "Accepted" %>

      <div class="error" >
        <%= resource.errors.full_messages_for(:password).first %>
      </div>
      <%= f.password_field :password, placeholder: "Password", autocomplete: "new-password"  %>

      <div class="error" >
        <%= resource.errors.full_messages_for(:password_confirmation).first %>
      </div>
      <%= f.password_field :password_confirmation,placeholder: "Password Confirmation",
                           autocomplete: "new-password" %>
      <%= f.submit "Create Account" %>
    </div>
  <% end %>
</div>
