<%= stylesheet_link_tag 'style.css' %>
<div class="user">
  <div class="col-md-12">
    <h4>Search Results</h4>
    <% if @users.any? %>
      <table>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
          <th>Status</th>
          <th></th>
          <th></th>
        </tr>
        <%= render partial: "search_user", collection: @users %>
      <table>
      <%= render '/users/shared/pagination' %>
    <% else %>
      <div class="alert alert-warning" role="alert">
        No Results Found!!
      </div>
    <% end %>
  </div>
</div>
