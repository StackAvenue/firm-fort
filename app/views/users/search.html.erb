<%= stylesheet_link_tag 'style.css' %>
<div class="user">
  <div class="col-md-12">
    <h4>Search Results</h4>
    <div class="notice">
      <% if flash.any? %>
        <script type="text/javascript">
          <% flash.each do |key, value| %>
            <% type = key.to_s.gsub('alert', 'error').gsub('notice', 'success') %>
            toastr.<%= type %>('<%= value %>')
          <% end %>
        </script>
      <% end %>
    </div>
    <% if @users.any? %>
      <table>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
          <th></th>
          <th></th>
        </tr>
        <%= render partial: "search_user", collection: @users %>
      <table>
      <%= render '/users/shared/pagination' %>
    <% else %>
      <div class="alert alert-warning" role="alert">
        No Results Found!!
      </div>
    <% end %>
  </div>
</div>
