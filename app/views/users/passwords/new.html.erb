<%= stylesheet_link_tag 'style.css' %><br/>

<body style="padding-left: 13cm;padding-right: 13cm;padding-top: 0.5cm">

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %><br/>

  <h2>Forgot your password?</h2>

  <div class="form">
    <%= f.email_field :email,placeholder: "Email", autofocus: true, autocomplete: "email" %>

    <%= f.submit "Reset password" %>

    <div class="align-right">
      <%= link_to "Sign up", new_registration_path(resource_name) %> |
      <%= link_to "Log in", new_session_path(resource_name) %>
  </div>
  </div>
<% end %>

