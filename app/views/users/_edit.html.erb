<div class="modal fade" id="editModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editModalTitle">Edit Details</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_for @user, remote: true do |f|  %>
          <div class="form">
            <b><%= f.label :first_name %></b>
            <div class="error" >
              <%= @user.errors.full_messages_for(:first_name).first %>
            </div>
            <%= f.text_field :first_name, placeholder: "First Name", autofocus: true%>

            <b><%= f.label :last_name %></b>
            <%= f.text_field :last_name, placeholder: "Last Name", autofocus: true %>
            
            <b><%= f.label :gender %></b>
            <%= f.select :gender, ["male","female","other"] , {prompt:'None'}, {class: "form-select"} %>

            <b><%= f.label :age %></b>
            <%= f.number_field :age, placeholder: "Age", autofocus: true %><br />
          </div>
          <div class="modal-footer">
            <%= f.submit "Update" %> 
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>  
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
