<%= stylesheet_link_tag 'style.css' %>

<body style="padding-left: 13cm;padding-right: 13cm;padding-top: 1cm"><br/>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %><br/>

  <h2>Log in</h2><br/>

  <div class="form">
    <div class="error" ><%= resource.errors[:email][0] %></div>
    <%= f.email_field :email,placeholder: "Email", autofocus: true, autocomplete: "email" %>
  
    <div class="error" ><%= resource.errors[:password][0] %></div>
    <%= f.password_field :password,placeholder: "Password", autocomplete: "current-password" %>

    <div class="forgot-password">
      <%= link_to "Forgot your password?", new_password_path(resource_name) %>
    </div><br/>  

     <%= f.submit "Log in" %>

    <% if devise_mapping.rememberable? %>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
    <% end %>
  </div>
  <div class="align-right">
    New User? <%= link_to "Sign up", new_registration_path(resource_name) %>
  </div>
<% end %>

</body>

