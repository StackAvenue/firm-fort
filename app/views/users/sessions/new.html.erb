<%= stylesheet_link_tag 'style.css' %>

<div class="form">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h2>Log in</h2>
    <div class="error" >
      <%= resource.errors.full_messages_for(:email).first %>
    </div>
    <%= f.email_field :email,placeholder: "Email", autofocus: true, autocomplete: "email" %>
    
    <div class="error" >
      <%= resource.errors.full_messages_for(:password).first %>
    </div>
    <%= f.password_field :password,placeholder: "Password", autocomplete: "current-password" %>

    <div class="forgot-password">
      <%= link_to "Forgot your password?", new_password_path(resource_name) %>
    </div><br/>  

    <%= f.submit "Log in" %>

    <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    <% end %>
    <div class="align-right">
      New User? <%= link_to "Sign up", new_registration_path(resource_name) %>
    </div>
  <% end %>
</div>



