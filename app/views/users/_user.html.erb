<% if user_in_organisation(user) %>
  <tr>
    <td><%= full_name(user) %></td>
    <td><%= user.email %></td>
    <td><%= user.role.name %></td>
    <td><%= link_to edit_user_path(user.id), remote: true  do %>
      <span class="fas fa-pencil-alt" aria-hidden="true"></span>
      <% end %>
    </td>
    <div id='edit_user'></div>
    <td><%= link_to sanitize('<i class="fas fa-trash-alt" aria-hidden="true">'), user_path(user), 
              method: :delete, data:{confirm: "Are you sure you want to delete user?" } %>
    </td>                   
  </tr>
<% end %>
