<%= stylesheet_link_tag 'style.css' %><br/>

<body style="padding-left: 13cm;padding-right: 13cm;padding-top: 0.5cm">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %><br/>
    <h2>Sign up</h2>
    
    <div class="form">
    <div class="error" ><%= resource.errors[:first_name][0] %></div>
      <%= f.text_field :first_name,placeholder: "First Name", autofocus: true%>

      <%= f.text_field :last_name,placeholder: "Last Name", autofocus: true %>

      <div class="error" ><%= resource.errors[:email][0] %></div>
      <%= f.email_field :email,placeholder: "Email", autofocus: true, autocomplete: "email" %><br/>

      <div class="error" ><%= resource.errors[:organisation][0] %></div>
      <%= f.select :organisation_id, Organisation.all.pluck(:name,:id),{prompt:'Organisation'} %><br/>
  
      <div class="error" ><%= resource.errors[:password][0] %></div>
      <%= f.password_field :password,placeholder: "Password", autocomplete: "new-password" %><br/>
    
      <div class="error" ><%= resource.errors[:password_confirmation][0] %></div>
      <%= f.password_field :password_confirmation,placeholder: "Password Confirmation",
           autocomplete: "new-password" %>

      <%= f.submit "Sign up" %>
    </div>
    <div class="align-right">
      Already have an Account? <%= link_to "Log in", new_session_path(resource_name) %>
    </div>
  <% end %>
</body>
