<%= stylesheet_link_tag 'style.css' %><br/>

<body style="padding-left: 13cm;padding-right: 13cm;padding-top: 1cm">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %><br/>

  <h2>Sign up</h2><br/>
  
  <div class="field">
  <%= f.label :first_name %><br />
  <%= f.text_field :first_name, autofocus: true %>
  </div><br/>
 
  <div class="field">
  <%= f.label :last_name %><br />
  <%= f.text_field :last_name, autofocus: true %>
  </div><br/>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div><br/>  

  <div class="field">
    <%= f.label :organisation %>
    <%= f.select :organisation_id, Organisation.all.pluck(:name,:id),{prompt:'select'} %>
  </div><br/> 

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div><br/>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div><br/>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div><br/>

  <%= link_to "Log in", new_session_path(resource_name) %>
<% end %>

</body>
